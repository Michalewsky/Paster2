<Window x:Class="PasterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasterApp"
        mc:Ignorable="d"
        Title="Paster" Height="640" Width="480">
    <Grid Margin="0,0,0,0">
        <Button x:Name="ClearBtn" Content="Clear" HorizontalAlignment="Left" Margin="10,579,0,0" VerticalAlignment="Top" Width="75" Click="ClearBtn_Click"/>
        <Button x:Name="GetBtn" Content="Get" HorizontalAlignment="Left" Margin="111,579,0,0" VerticalAlignment="Top" Width="75" Click="GetBtn_Click"/>
        <Button x:Name="SwitchBtn" Content="Start" HorizontalAlignment="Left" Margin="215,579,0,0" VerticalAlignment="Top" Width="75" Click="SwitchBtn_Click"/>
        <TextBox x:Name="txtBox" x:FieldModifier="public" HorizontalAlignment="Left" Height="190" TextWrapping="Wrap" VerticalAlignment="Top" Width="472" Margin="0,370,0,0"/>
        <DockPanel x:Name="pnlContent" Background="Gray" Margin="0,10,0,244" LastChildFill="True"/>


    </Grid>
</Window>
